<view class="task-list">
  <!-- 任务为空时显示 -->
  <view wx:if="{{tasks.length === 0}}" class="empty-tip">
    暂无任务
  </view>
  
  <!-- 任务列表 -->
  <view wx:else class="tasks-container">
    <view 
      wx:for="{{tasks}}" 
      wx:key="taskId" 
      class="task-item {{task.status === 1 ? 'completed' : ''}}"
      bindtap="onTaskTap"
      data-taskid="{{item.taskId}}"
    >
      <!-- 任务状态复选框 -->
      <view class="task-status">
        <checkbox 
          checked="{{task.status === 1}}" 
          bindchange="onTaskComplete"
          data-taskid="{{item.taskId}}"
        />
      </view>
      
      <!-- 任务内容 -->
      <view class="task-content">
        <view class="task-title {{getPriorityClass(item.priority)}}">
          {{item.title}}
        </view>
        
        <view class="task-meta">
          <!-- 任务时间 -->
          <view class="task-time">
            {{formatTime(item.startTime)}} - {{formatTime(item.endTime)}}
          </view>
          
          <!-- 任务标签 -->
          <view class="task-tags">
            <view wx:for="{{item.tags}}" wx:key="tagId" class="tag">
              {{item.tagName}}
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
